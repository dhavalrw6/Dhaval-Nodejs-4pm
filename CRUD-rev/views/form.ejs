<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    
    <form action="/insertData" method="post">
        <table border="1" align="center">
            <caption>
                <h2>Add Employee Data</h2>
            </caption>
            <tr>
                <td>id</td>
                <td><input type="text" name="id"></td>
            </tr>
            <tr>
                <td>username</td>
                <td><input type="text" name="username"></td>
            </tr>
            <tr>
                <td>email</td>
                <td><input type="text" name="email"></td>
            </tr>
            <tr>
                <td>password</td>
                <td><input type="text" name="password"></td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="add Data"></td>
            </tr>
        </table>
    </form>

    <br><br>
    <table border="1" align="center">
            <tr>
                <td>id</td>
                <td>UserName</td>
                <td>Email</td>
                <td>password</td>
                <td>Action</td>
            </tr>

            <% empData.map((val)=>{ 
                let {id,username,email,password} = val    
            %>  

                <tr>
                    <td><%= id %></td>
                    <td><%= username %></td>
                    <td><%= email %></td>
                    <td><%= password %></td>
                    <td>
                        <a href="/deleteData/<%= id %>">Delete</a>
                        <a href="/editData/<%= id %>">Edit</a>
                    </td>
                </tr>

            <%}) %>

        </table>

</body>
</html>